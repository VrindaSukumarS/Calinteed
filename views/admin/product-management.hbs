<div class="">
  <div class="wrapper ">
    <div class="sidebar" data-color="white" data-background-color="black">
      <!--data-image="../assets/img/sidebar-2.jpg"
          Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"

          Tip 2: you can also add an image using data-image tag
      -->
      <div class="logo"><a href="" class="simple-text logo-normal">
          Admin Panel
        </a>
      </div>
      <div class="sidebar-wrapper">
        <ul class="nav">
          <li class="nav-item ">
            <a class="nav-link" href="/admin">
              <i class="material-icons">dashboard</i>
              <p>Dashboard</p>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="../admin/user-management">
              <i class="material-icons">person</i>
              <p>Users Management</p>
            </a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="../admin/product-management">
              <i class="material-icons">content_paste</i>
              <p>Product Management</p>
            </a>
          </li>

          <li class="nav-item ">
            <a class="nav-link" href="../admin/order-management">
              <i class="material-icons">bubble_chart</i>
              <p>Order Management</p>
            </a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="../admin/category-management">
              <i class="material-icons">category</i>
              <p>Category Management</p>
            </a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="/admin/coupon-management">
              <i class="material-icons">category</i>
              <p>Coupon Management</p>
            </a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="../admin/banner-management">
              <i class="material-icons">library_books</i>
              <p>Banner Management</p>
            </a>
          </li>

        </ul>
      </div>
    </div>
    <div class="main-panel" style="background-color: rgb(227, 225, 221);">

      <div class="content">
       
        <div class="container-fluid">

          <div class="row">
            <div class="col-md-12">


              <div class="card">
                <div class="card-header  card-header-dark" style="background-color: rgb(153,153,153);" >
                  {{!-- style="background-color:rgb(165, 161, 161)" --}}
                  <div class="row align-items-center">
                    <div class="col">
                      <h4 class="card-title"><strong>Product Details</strong></h4>
                    </div>
                    <a href="../admin/add-product" class="btn btn-sm btn-dark mr-2 ms-auto" style="font-size: small;">
          <strong>Add Product</strong>
        </a>
                  </div>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table id="producttable" class="table table-hover" style="color: rgb(8, 8, 8);font-size:14px">
                      <thead class=" text-dark">
                        <tr>
                          <th scope="col">No.</th>
                          <th scope="col"> Name</th>
                          <th scope="col"> Code</th>
                          <th scope="col">Category</th>
                          <th scope="col" >Description</th>
                          <th scope="col">Price</th>
                          <th scope="col">Image</th>
                          <th scope="col">Edit</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each products}}
                        <tr>
                          {{!-- <th scope="row">1</th> --}}
                          <td>{{inc @index}}</td>
                          <td><strong>{{this.name}}</strong></td>
                          <td><strong>{{this.code}}</strong></td>
                          <td><strong>{{this.categoryname.[0].name}}</strong></td>
                          <td><strong>{{this.description}}</strong></td>
                          <td><strong>{{this.price}}</strong></td>
                          {{!-- <td>{{this.image}}</td> --}}
                          <td><img src="{{this.imagefield.[0]}}" alt="{{this.name}}" style="max-width: 100px;"></td>
                          <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-sm btn-primary">Edit</a> &nbsp;
                            {{#if this.status}}
                            <button class="btn btn-sm btn-danger" data-toggle="modal" data-target="#unlistProduct{{this._id}}" 
                              >Unlist</button>
                          </td>
                          {{else}}
                          <button class="btn btn-sm btn-success" data-toggle="modal" data-target="#listProduct{{this._id}}"
                            >list</button></td>
                          {{/if}}
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

{{#each products}}
<div class="modal fade" id="unlistProduct{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="unlistProductLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="unlistProductLabel"><strong>Unlist Product</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-danger">
        <strong>Do you want to Unlist this product ?</strong>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><strong>Close</strong></button>
        <a href="/admin/unlistProduct/{{this._id}}"  class="btn" style="background-color: black;">Unlist</a>
      </div>
    </div>
  </div>
</div>
{{/each}}


{{#each products}}
<div class="modal fade" id="listProduct{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="listProductLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="listProductLabel"><strong>List Product</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-danger">
        <strong>Do you want to List this product ?</strong>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><strong>Close</strong></button>
        <a href="/admin/listProduct/{{this._id}}"  class="btn" style="background-color: black;">List</a>
      </div>
    </div>
  </div>
</div>
{{/each}}

<script>
  $(document).ready(function () {
    $('#producttable').DataTable();


  });
</script>