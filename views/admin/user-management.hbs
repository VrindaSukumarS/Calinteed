    <div class="row">
        <div class="mt-5 mx-4 d-flex"><a href="../admin/add-user" class="btn btn-success ms-auto">Add User</a></div>
    </div>
    
    <div class="mt-5 mx-4 text-white">
      <table class="table mt-4 display text-white" id="productsTable">
        <thead>
          <tr>
            {{!-- <th scope="col">No</th> --}}
            <th scope="col">No.</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Mob.No</th>
            <th scope="col">Edit</th>
            {{!-- <th scope="col">Image</th>
            <th scope="col">Options</th> --}}
          </tr>
        </thead>
        <tbody>
          {{#each users}}
              <tr>
                {{!-- <th scope="row">1</th> --}}
                <td>{{inc @index}}</td>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.tel}}</td>
                {{!-- <td>Rs.{{this.price}}</td> --}}
                {{!-- <td><img style="width: 40px;height:40px" src="/product-images/{{this._id}}.jpg"></td>
                <a href="/admin/delete/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}}')">Delete</a></td> --}}
                {{#if this.userStatus}}
                <td><a href="/admin/blockUser/{{this._id}}" class="btn btn-danger">Block</a> &nbsp;
                {{else}}
                <td><a href="/admin/unblockUser/{{this._id}}" class="btn btn-success">Unblock</a> &nbsp;
                {{/if}}
              </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    
</section>

