{{#each users}}
<!-- Modal -->
<div class="modal fade" id="blockUser{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="blockUserLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="blockUserLabel"><strong>Block User</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-danger">
        <strong>Do you want to Block this user ?</strong>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><strong>Close</strong></button>
        <a href="/admin/blockUser/{{this._id}}"  class="btn" style="background-color: black;">Block</a>
      </div>
    </div>
  </div>
</div>
{{/each}}


{{#each users}}

<div class="modal fade" id="unblockUser{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="unblockUserLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="unblockUserLabel"><strong>Block User</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-danger">
        <strong>Do you want to Unblock this user ?</strong>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><strong>Close</strong></button>
        <a href="/admin/unblockUser/{{this._id}}"  class="btn" style="background-color: black;">unblock</a>
      </div>
    </div>
  </div>
</div>
{{/each}}


