            <div class="col-lg-6 mt-5 text-dark">
              <h2 class="mt-5 mb-3" style="font-size: 1.5rem;"><strong> Edit Coupon </strong> </h2>
              <form action="/admin/edit-coupon/{{coupon._id}}"  method="post">
                <div class="mb-3">
                  <label for="name" class="form-label text-dark"><strong>Coupon Name</strong></label>
                  <input type="text" class="form-control" name="name" value="{{coupon.name}}" aria-describedby="emailHelp" disabled>
                </div>
                <div class="mb-3">
                  <label for="code" class="form-label text-dark"><strong>Coupon Code</strong></label>
                  <input type="text" class="form-control " name="code" value="{{coupon.code}}" aria-describedby="emailHelp" disabled>
                </div>
                <div class="mb-3">
                  <label for="disamount" class="form-label text-dark"><strong>Discount Amount</strong></label>
                  <input type="integer" class="form-control " name="disamount" value="{{coupon.disamount}}" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                  <label for="expirydate" class="form-label text-dark"><strong>Expiry Date</strong></label>
                  <input type="date" class="form-control " name="expirydate" value="{{coupon.expirydate}}" aria-describedby="emailHelp">
                </div>
                
                
                <div class="text-center mt-3 mb-3">
                  <button type="submit" class="btn btn-success"><a href="/admin/coupon-management" class="text-white">Submit</a></button>
