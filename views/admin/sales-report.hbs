                                                    <td>{{this.date}}</td>
                                                    <td>{{this._id}}</td>
                                                    <td>{{this.userDetails.[0].name}}</td>
                                                    <td>â‚¹ {{this.totalAmount}}</td>
                                                    <td>{{this.paymentMethod}}</td>
                                                    {{/each}}

                                                </tr>
                                            </tbody>
