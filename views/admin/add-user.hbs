                        </div>
                        <div class="mb-3">
                          <label for="mobnum" class="form-label">Mobile Number</label>
                          <input type="tel" class="form-control" name="tel" onkeyup="validateTel()" id="tel">
                          <span id="tel-error" class="validation-label" style="color: red;" ></span>
                        </div>
                        <div class="mb-3">
                          <label for="password" class="form-label">User Password</label>
                          <input type="password" class="form-control" name="password" onkeyup="validatePassword()" id="password">
                          <span id="password-error" class="validation-label" style="color: red;"></span>
                        </div>

