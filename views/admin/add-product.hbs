    <div class="main-panel">

      <section class="dark-edition">
        <div class="container">
          <div class="row">
            <div class="col-lg-6 mt-3 text-white">
              <h2 class="mt-5" style="font-size: 2rem;">ADD PRODUCTS</h2>
              <form action="/admin/add-product" style="margin-top: 2em;" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="name" class="form-label">Product Name</label>
                  <input type="text" class="form-control" name="name" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                  <label for="code" class="form-label">Product Code</label>
                  <input type="" class="form-control" name="code" id="code">
                </div>
                <div class="mb-3">
                  <label for="category" class="form-label">Product Category</label>
                  <select class="form-select" name="category" id="category">
                    <option value="">Select a category</option>
                    {{#each categories}}
                      <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                  </select>
                </div>


                <div class="mb-3">
                  <label for="description" class="form-label">Description</label>
                  <input type="text" class="form-control" name="description" id="description">
                </div>
                <div class="mb-3">
                  <label for="price" class="form-label">Price</label>
                  <input type="number" class="form-control" name="price" id="price">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label" >Image</label>
                    <input type="file" class="form-control" name="image" id="image" multiple>
                </div>


                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-dark">Submit</button>
                {{!-- </div>
