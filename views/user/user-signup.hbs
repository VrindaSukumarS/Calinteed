                    <span id="password-error" class="validation-label" style="color: red;"></span>                  
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                    <label for="c_subject" class="text-light ">Confirm Password <span class="text-danger">*</span></label>
                    <input type="password" id="password2" class="form-control mb-2" name="password2" onkeyup="validateConfirmPassword()" placeholder="Confirm Password" />
                    <span id="password2-error" class="validation-label" style="color: red;"></span>                  </div>
                </div>
                

                <input type="string" id="userStatus" class="userStatus" value="true" style="display: none;"/>
                

                

                {{#if loginErr}}
                <div style="color: red;">{{loginErr}}</div>
              {{/if}}
                <div class="form-group row">
                    <div class="col-lg-12">
                    <input type="submit" class="btn btn-dark btn-lg btn-block" value="Register" onclick="return validateForm()">
