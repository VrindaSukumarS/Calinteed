<div class="bg-light py-3">
    <div class="container">
    <div class="row">
        <div class="col-md-12 mb-0"><a href="/">Home</a><span class="mx-2 mb-0">/</span> <a href="/user-address/{{user._id}}">My Addresses</a><span class="mx-2 mb-0">/</span> <strong class="text-black">Add New Address</strong></div>
    </div>
    </div>
</div>  
<div class="site-section">
    <div class="container">
    <div class="row ">
        <div class="col-md-12">
        <h2 class="h3 mb-3 text-black">{{user.name}}</h2>
        </div>
        <div class="col-md-5 ml-auto">
            <div class="p-4 border mb-3">
                <a href="/userprofile/{{this._id}}"><span class="d-block text-black h6 text-uppercase" >My Account</span></a>
            </div>
            <div class="p-4 border mb-3">
                    <a href="/user-address/{{user._id}}"><span class="d-block text-primary h6 text-uppercase">My Addresses</span></a>
            </div>
            <div class="p-4 border mb-3">
                <a href="/wishlist"> <span class="d-block text-black h6 text-uppercase">My Wishlist</span></a>
            </div>
            <div class="p-4 border mb-3">
                <a href="/user-orders"><span class="d-block text-black h6 text-uppercase">My Orders</span></a>
            </div>
            <div class="p-4 border mb-3">
                    <a href="/my-wallet"><span class="d-block text-black h6 text-uppercase">My Wallet</span></a>
                </div>
            <div class="p-4 border mb-3">
                    <a href="/change-password"><span class="d-block text-black h6 text-uppercase">Change Password</span></a>
            </div>
        </div>
        <div class="col-md-7">
        <div class="p-3 border text-primary">

        <form action="/user-add-address" method="post">
            <div class="form-group row">
            <div class="col-md-12">
                <h2 class="h3 mb-3 text-black">Add New Address</h2>
            </div>
            </div>
            
            <!-- <div class="p-3 p-lg-5 border"> -->
            <div class="form-group row">
                <div class="col-md-12">
                <label for="name" class="text-black">Full Name <span class="text-danger">*</span></label>
               <input type="text" id="name" name="name" class="form-control"
                onkeyup="validateName()" placeholder="Name" required/>
                <span id="name-error" class="validation-label" style="color: red;"></span>                  
                </div>
                
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                <label for="address" class="text-black">Address <span class="text-danger">*</span></label>
                <input type="address" id="address" name="address" class="form-control"
                onkeyup="validateaddress()"  required/>
                <span id="address-error" class="validation-label" style="color: red;"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-md-12">
                <label for="state" class="text-black">State<span class="text-danger">*</span></label>
                    <input type="state" id="state" name="state" class="form-control"
                    onkeyup="validatestate()" required/>
                    <span id="state-error" class="validation-label" style="color: red;"></span>                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                <label for="country" class="text-black">Country<span class="text-danger">*</span></label>
                    <input type="country" id="country" name="country" class="form-control"
                    onkeyup="validatecountry()" required/>
                    <span id="country-error" class="validation-label" style="color: red;"></span>                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-md-12">
                <label for="postal_zip" class="text-black">Postal / Zip <span class="text-danger">*</span></label>
                <input type="pincode" id="pincode" name="pincode" class="form-control"
                onkeyup="validatepincode()" required/>
                <span id="pincode-error" class="validation-label" style="color: red;"></span>              
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                <label for="tel" class="text-black">Mobile Number<span class="text-danger">*</span> </label>
                <input type="tel" id="tel" name="tel" class="form-control" onkeyup="validateTel()" onfocus="addCountryCode()"  required/>
                <span id="tel-error" class="validation-label" style="color: red;" ></span>
                </div>
            </div>
            
        
            <div class="form-group row">
                <div class="col-lg-12">
                    <button type="submit"  class="buy-now btn btn-sm btn-dark" onclick="return validateForm()">Submit</button>
                </div>
            </div> 
            </div>
        </form>
        </div>
    </div>
</div>


<script type="text/javascript" src="/javascripts/signup-validation.js"></script>
<script>
    function addCountryCode() {
        var tel = document.getElementById('tel');
        if (!tel.value.startsWith('+91')) {
            tel.value = '+91' + tel.value;
        }
    }
</script>