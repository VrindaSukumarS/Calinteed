<section class="h-100 gradient-custom ">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px;">
          <div class="card-header px-4 py-5 text-dark">
            <h5 class="mb-0">Thanks for your Order, <span style="color: black;"> {{details.deliveryDetails.name}} </span>!</h5>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: black;">Receipt</p>
              <p class="small text-dark mb-0"><strong>Order Id : {{details._id}}</strong></p>
              {{!-- <p class="small text-muted mb-0">Receipt Voucher : 1KAU9-84UIL</p> --}}
            </div>
            {{#each products}}
            <div class="card shadow-0 border mb-4">
              <div class="card-body ">
                <div class="row text-dark">
                  <div class="col-md-2">
                    <img src="{{this.product.imagefield.[0]}}"
                      class="img-fluid" alt="Phone">
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-dark mb-0"><strong>{{this.product.name}}</strong></p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-dark mb-0 small"><strong>Size</strong></p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-dark mb-0 small"><strong>{{this.product.code}}</strong></p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-dark mb-0 small"><strong>Qty: {{this.quantity}}</strong></p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-dark mb-0 small"><strong>₹ {{this.product.price}}</strong></p>
                  </div>
                </div>
                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                <div class="row d-flex align-items-center">
                  <div class="col-md-2">
                    <p class="text-dark mb-0 small"><strong>Track Order</strong></p>
                  </div>
                  <div class="col-md-10">
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      {{#if (isEqual details.status SHIPPED)}}
                      <div class="progress-bar" role="progressbar"
                        style="width: 65%; border-radius: 16px; background-color:rgb(81, 80, 80);" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                      {{else}}
                      <div class="progress-bar" role="progressbar"
                        style="width: 100%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="100"
                        aria-valuemin="0" aria-valuemax="100"></div>
                      {{/if}}
                    </div>
                    <div class="d-flex justify-content-around mb-1 text-dark">
                      <p class="mt-1 mb-0 small ms-xl-5"><strong>Shipped</strong></p>
                      <p class="mt-1 mb-0 small ms-xl-5"><strong>Out for delivery</strong></p>
                      <p class="mt-1 mb-0 small ms-xl-5"><strong>Delivered</strong></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
            

            <div class="d-flex justify-content-between pt-2">
              <strong><p class="fw-bold mb-0 text-dark"><strong><u>Order Details</u></strong></p></strong>
              <strong><p class="text-dark mb-0"><span class="fw-bold me-4"><strong>Total : </strong></span> ₹ {{ details.totalAmount }}</p></strong>
            </div>

            <div class="d-flex justify-content-between text-dark pt-2">
              <strong><p class=" mb-0"><strong>Delivery Address :</strong><br> {{ details.deliveryDetails.name }}, <br>{{ details.deliveryDetails.address }},<br> {{ details.deliveryDetails.country}}, {{ details.deliveryDetails.state}},{{ details.deliveryDetails.pincode}}</p></strong>
              {{!-- <p class=" mb-0"><span class="fw-bold me-4">Discount</span> $19.00</p> --}}
              <strong><p class="text-dark mb-0"><span class="fw-bold me-4"><strong>Payment Method : </strong></span> {{ details.paymentMethod }}</p></strong>
            </div>
            <div class="d-flex justify-content-between text-dark pt-2"><strong>
              <p class="text-dark mb-0"><strong>Delivery Date : </strong>{{details.delivered_date}} </p></strong>
            </div>

