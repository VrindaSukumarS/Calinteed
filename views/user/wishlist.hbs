<script>
  function removeWishlistProduct(wishlistId,proId){
   
    $.ajax({
      url : '/remove-wishlist-product',
      data : {
        wishlist : wishlistId,
        product : proId,
      },
      method :'post',
      success : (response)=>{
        if(response.removeProduct){
          alert("Product removed from wishlist")
          location.reload()
        }
      }
    })
  }
</script>
